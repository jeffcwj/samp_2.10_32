<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:id="@+id/container"
    android:layout_margin="5dp"

    android:layout_height="100dp">


    <View
        android:id="@+id/back_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/server_rectangle"
        android:backgroundTint="@color/blue_"
        android:alpha="0.5"

        app:layout_constraintBottom_toBottomOf="parent" />


        <ImageView
            android:contentDescription="@string/image_load"
            android:id="@+id/bearPaw"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_monitoring"
            app:tintMode="src_atop"
            android:tint="@color/yellow"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintStart_toStartOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="@+id/progressBar"
            app:layout_constraintTop_toTopOf="@+id/progressBar" />


        <TextView
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/montserrat_black"
            android:text="SERVER"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toEndOf="@+id/bearPaw"
            app:layout_constraintTop_toTopOf="@+id/bearPaw" />

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            app:drawBackgroundOutsideProgress="true"
            app:layout_constraintBottom_toBottomOf="@+id/back_color"
            app:layout_constraintStart_toStartOf="@+id/back_color"
            app:layout_constraintTop_toTopOf="@+id/back_color"
            app:progress_background_color="@color/white6"
            app:progress_end_color="@color/blue"
            app:progress_shader="linear"
            app:progress_start_color="@color/blue"
            app:progress_start_degree="-90"
            app:progress_stroke_cap="square"
            app:progress_stroke_width="@dimen/_5sdp"
            app:progress_style="solid_line"
            app:progress_text_color="@color/transparent" />

        <ImageView
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_16sdp"
            android:adjustViewBounds="true"
            app:tintMode="src_atop"
            android:src="@drawable/players_icon_monitor"

            app:layout_constraintStart_toStartOf="@+id/firstName"
            app:layout_constraintTop_toBottomOf="@+id/firstName" />

        <TextView
            android:id="@+id/online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montsserat_semibold"
            android:text="500"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/people"
            app:layout_constraintTop_toTopOf="@+id/people" />

        <TextView
            android:id="@+id/onlineTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:fontFamily="@font/montsserat_semibold"
            android:text="/1000"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/online"
            app:layout_constraintTop_toBottomOf="@+id/firstName" />

    <TextView
        android:id="@+id/x2"
        android:fontFamily="@font/montserrat_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X2"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintStart_toEndOf="@+id/bearPaw" />

</androidx.constraintlayout.widget.ConstraintLayout>