<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:contentDescription="@string/image_load"
            android:id="@+id/imageView51"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/navigationbottom1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:contentDescription="@string/image_load"

            android:src="@drawable/play_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/monitoringButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/monitoringImage"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/icon_monitoring"
                app:layout_constraintBottom_toTopOf="@+id/monitoringTV"
                app:layout_constraintEnd_toEndOf="@+id/monitoringTV"
                app:layout_constraintStart_toStartOf="@+id/monitoringTV"
                app:tint="@color/menuTextEnable" />

            <TextView
                android:id="@+id/monitoringTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/din_pro_bold"
                android:shadowColor="#40000000"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="Мониторинг"
                android:textColor="@color/menuTextEnable"
                android:textFontWeight="800"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settingsButton"
            android:layout_width="75dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/monitoringButton"
            app:layout_constraintEnd_toStartOf="@+id/playButton"
            app:layout_constraintStart_toEndOf="@+id/monitoringButton">

            <ImageView

                android:id="@+id/settingsImage"
                android:layout_width="23dp"
                android:layout_marginBottom="2dp"
                android:layout_height="23dp"
                android:src="@drawable/icon_setting"
                app:layout_constraintBottom_toTopOf="@+id/settingsTV"
                app:layout_constraintEnd_toEndOf="@+id/settingsTV"
                app:layout_constraintStart_toStartOf="@+id/settingsTV" />

            <TextView
                android:id="@+id/settingsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/din_pro_bold"
                android:shadowColor="#40000000"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="Настройки"
                android:textColor="@color/menuTextDisable"
                android:textFontWeight="800"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/donateButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/donateImage"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/icon_donate"
                app:layout_constraintBottom_toTopOf="@+id/donateTV"
                app:layout_constraintEnd_toEndOf="@+id/donateTV"
                app:layout_constraintStart_toStartOf="@+id/donateTV" />

            <TextView
                android:id="@+id/donateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/din_pro_bold"
                android:shadowColor="#40000000"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="Донат"
                android:textColor="@color/menuTextDisable"
                android:textFontWeight="800"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rouletteButton"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/donateButton"
            app:layout_constraintStart_toEndOf="@+id/playButton">

            <ImageView
                android:id="@+id/forumImage"
                android:layout_width="23dp"
                android:layout_marginBottom="2dp"
                android:layout_height="23dp"
                android:src="@drawable/icon_roulette"
                app:layout_constraintBottom_toTopOf="@+id/rouletteButText"
                app:layout_constraintEnd_toEndOf="@+id/rouletteButText"
                app:layout_constraintStart_toStartOf="@+id/rouletteButText" />

            <TextView
                android:id="@+id/rouletteButText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/din_pro_bold"
                android:shadowColor="#40000000"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="Рулетка"
                android:textColor="#9D9D9D"
                android:textFontWeight="800"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
