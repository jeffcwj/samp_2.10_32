
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/_50sdp" />

    <FrameLayout

        android:layout_width="fill_parent"
        android:layout_height="@dimen/_46sdp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="@drawable/navigationbottom1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_46sdp"
            android:gravity="center_vertical"
            >

                <LinearLayout
                    android:id="@+id/monitoringButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"

                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/monitoringImage"
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:src="@drawable/icon_monitoring"
                        app:tint="@color/menuTextEnable" />

                    <TextView
                        android:id="@+id/monitoringTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_pro_bold"
                        android:shadowColor="#40000000"
                        android:shadowDy="4"
                        android:shadowRadius="3"
                        android:text="Мониторинг"
                        android:textAlignment="center"
                        android:textColor="@color/menuTextEnable"
                        android:textFontWeight="800"
                        android:textSize="26px" />
                </LinearLayout>

            <LinearLayout

                android:layout_width="60dip"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:gravity="center_horizontal|center_vertical">

                <LinearLayout
                    android:id="@+id/settingsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView

                        android:id="@+id/settingsImage"
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:src="@drawable/icon_setting" />

                    <TextView
                        android:id="@+id/settingsTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_pro_bold"
                        android:shadowColor="#40000000"
                        android:shadowDy="4"
                        android:shadowRadius="3"
                        android:text="Настройки"
                        android:textColor="@color/menuTextDisable"
                        android:textFontWeight="800"
                        android:textSize="26px" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="60dip"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginStart="@dimen/_75sdp"
                android:gravity="center_horizontal|center_vertical">

                <LinearLayout
                    android:id="@+id/rouletteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/forumImage"
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:src="@drawable/icon_roulette" />

                    <TextView
                        android:id="@+id/rouletteBut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_pro_bold"
                        android:shadowColor="#40000000"
                        android:shadowDy="4"
                        android:shadowRadius="3"
                        android:text="Рулетка"
                        android:textColor="#9D9D9D"
                        android:textFontWeight="800"
                        android:textSize="26px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dip"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_height="@dimen/_46sdp"
                android:gravity="center_horizontal|center_vertical">

                <LinearLayout
                    android:id="@+id/donateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/donateImage"
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:src="@drawable/icon_donate" />

                    <TextView
                        android:id="@+id/donateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_pro_bold"
                        android:shadowColor="#40000000"
                        android:shadowDy="4"
                        android:shadowRadius="3"
                        android:text="Донат"
                        android:textColor="@color/menuTextDisable"
                        android:textFontWeight="800"
                        android:textSize="26px" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/serverLL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_18sdp"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingRight="@dimen/_14sdp"
        android:paddingTop="@dimen/_18sdp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_root_ui_medium"
            android:text="Выберите сервер"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="0.5"
            android:fontFamily="@font/pt_root_ui_medium"
            android:text="Выберите сервер на котором вы играете"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chooseServersRV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_minus14sdp"
                android:layout_marginRight="@dimen/_minus14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:clipToPadding="false"
                android:scrollbarThumbVertical="@drawable/scrollbar_rv"
                android:scrollbars="vertical" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/chooseServerCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/button_red_stroke_rectangle"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_40sdp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pt_root_ui_medium"
                    android:text="Назад"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout

        android:background="@color/transparent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/playButton"
                android:gravity="center_vertical|center_horizontal"

                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
>

                <ImageView
                    android:paddingTop="15dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/playImage"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:outlineSpotShadowColor="@color/menuTextDisable"
                    android:outlineAmbientShadowColor="@color/menuTextDisable"
                    android:src="@drawable/icon_play"
                    tools:visibility="visible" />
            </LinearLayout>


    </RelativeLayout >
</FrameLayout>
