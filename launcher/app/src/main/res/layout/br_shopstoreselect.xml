<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/br_shopstroreselect_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@drawable/shopstore_buy_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="60dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/shop_buyinfo" />

            <TextView
                android:id="@+id/shopstore_buyinfo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/din_pro_bold"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:text="ЦЕНА: 0"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView32"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/shopstore_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout6"
            app:srcCompat="@drawable/shop_btn" />

        <ImageView
            android:id="@+id/shopstore_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="75dp"
            android:rotation="180"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout6"
            app:srcCompat="@drawable/shop_btn" />

        <ImageView
            android:id="@+id/shopstore_buy"
            android:layout_width="150dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout6"
            app:layout_constraintStart_toStartOf="@+id/shopstore_left"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
            app:srcCompat="@drawable/shop_buy" />

        <ImageView
            android:id="@+id/shopstore_exit"
            android:layout_width="150dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/shopstore_right"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout6"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
            app:srcCompat="@drawable/shop_exit" />

        <ImageView
            android:id="@+id/shopstore_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/shopstore_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/shopstore_exit"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
            app:srcCompat="@drawable/shop_camera" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>